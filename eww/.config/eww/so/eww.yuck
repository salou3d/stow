(defwidget metric [label tooltip value onchange]
  (box :class "metric"
    :orientation "h":space-evenly false
    (box :class "label" label)
    (scale :min 0
           :max 101
           :active {onchange != ""}
           :value value
           :tooltip tooltip
           :onchange onchange)))

