general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "load"
order += "memory"
order += "battery all"
order += "cpu_temperature 0"
order += "wireless wlan1"
order += "tztime local"

wireless wlan0 {
        format_up = "%quality at %essid"
        format_down = "W: down"
}

wireless wlan1 {
        format_up = "%quality at %essid"
        format_down = "W: down"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M"
        hide_if_equals_localtime = false
}


load {
        format = "%1min"
}

cpu_temperature 0 {
        format = "T: %degrees Â°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "%free"
}

read_file uptime {
        path = "/proc/uptime"
}
