* {
    border: none;
    color : #c9c6b5;
    background-color: #242918;
}

#frame {
    padding: 8px 8px;
    border-radius: 5px;
    border: 1px solid #4c279a;
    background-color: #242918;
    min-width:640px;
    max-width:640px;
    min-height:350px;
    max-height:350px;
}

#inputLine {
    padding: 8px 22px;
    font-size: 28px;
    selection-color: #242918;
    selection-background-color: #c9c6b5;
    background-color: transparent;
    border-radius: 22px;
}

#settingsButton {
    margin: 6px 6px 0px 0px;
    color: #c9c6b5;
    background-color: transparent;
    padding: 2px;
    min-width:14px;
    min-height:14px;
    max-width:14px;
    max-height:14px;
}

/********** ListViews ************/

QListView {
    background: transparent;
    selection-color: #c9c6b5;
}

QListView::item:selected {
    background: #4c279a;
    color: #c9c6b5;
}

QListView QScrollBar:vertical  {
    width: 3px;
    background: transparent;
}

QListView QScrollBar::handle:vertical  {
    background: #6a6c5b;
    border-radius: 1px;
    min-height: 24px;
}

QListView QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QListView QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical,
QListView QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    border: 0px;
    width: 0px;
    height: 0px;
    background: transparent;
}

/********** resultsList **********/

QListView#resultsList {
    icon-size: 40px;
    font-size: 20px;
}

QListView#resultsList::item {
    padding: 5px 22px;
    height: 48px;
    border-radius: 22px;
}

/********** actionList **********/

QListView#actionList {
    font-size: 20px;
}

